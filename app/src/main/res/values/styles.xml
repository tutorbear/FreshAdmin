<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textChipStyle." parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/roboto_light_xml</item>
    </style>

    <style name="chipTextGuardian" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/roboto_light_xml</item>
    </style>

    <style name="robotoLightItalic" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/roboto_light_italic_xml</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/input_etext_outline_color</item>
    </style>

    <style name="ExposeInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/input_etext_outline_color</item>
    </style>

    <style name="TextInputLayoutStyleDark"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/input_etext_dark_outline_color</item>
    </style>

    <style name="ExposeInputLayoutStyleDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/input_etext_dark_outline_color</item>
    </style>

</resources>